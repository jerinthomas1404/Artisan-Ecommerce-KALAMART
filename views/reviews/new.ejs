<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="formStyle">
            <h2 class="formTitle">Add a New Review to <%= product.title %></h2>
            <form action="/products/<%= product._id %>/reviews" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="number" min="1", max="5", step="1" name="review[rating]" placeholder="Rating">    
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="review[text]" placeholder="Text">    
                </div>
                <div class="form-group">
                    <input class="btn btn-block btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>