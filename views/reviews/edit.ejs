<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="formStyle">
            <h2 class="formTitle">Edit Review by "<%= review.author.username %>"</h2>
            <form action="/products/<%= product_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text" name="review[text]" value="<%= review.text %>" placeholder="Text">    
                </div>
                <div class="form-group">
                    <input class="btn btn-block btn-primary" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>